{
  "name": "listmusik",
  "description": "A simple music organiser",
  "version": "0.1.0",
  "main": "index.html",
  "window": {
    "toolbar": true,
    "width": 800,
    "height": 600
  },
  "scripts": {
    "postinstall": "bower install && cd node_modules/node-expat && nw-gyp configure --target=`npm info nw version` && nw-gyp build",
    "start": "nw ."
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ed359/listmusik.git"
  },
  "keywords": [
    "music",
    "playlist",
    "itunes"
  ],
  "author": "Ewan Davies <ewan.davies@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "escape-string-regexp": "^1.0.4",
    "ffmetadata": "^1.4.0",
    "file-url": "^1.0.1",
    "itunes-data": "^0.1.1",
    "jade": "^1.11.0",
    "lodash": "^4.2.1",
    "node-expat": "^2.2.0",
    "nw": "^0.12.3"
  }
}
